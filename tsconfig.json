{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "dom",
      "esnext"
    ],
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}
