    "module": "ES2022",
    "outDir": "./build",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}
